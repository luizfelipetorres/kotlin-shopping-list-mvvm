<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relative_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/rectangle"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_title"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:padding="4dp"
                android:text="@string/header_item"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/sort_title_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/translucid"
                android:src="@drawable/ic_remove" />

        </RelativeLayout>


        <TextView
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/rectangle"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:padding="4dp"
            android:text="@string/header_quantity"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/relative_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_price"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:padding="4dp"
                android:text="@string/header_price"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/sort_price_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/translucid"
                android:src="@drawable/ic_remove" />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

