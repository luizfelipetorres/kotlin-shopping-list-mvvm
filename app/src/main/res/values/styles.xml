<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ShoppingList.Dialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#0fff</item>
    </style>

    <style name="TextInputFormItem">
        <item name="drawableTint">@color/design_default_color_primary</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_height">match_parent</item>
